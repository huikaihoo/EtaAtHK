<resources>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorMenuWhite</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

        <item name="alertDialogTheme">@style/AppTheme.Dialog.Large</item>
    </style>

    <!-- App Theme (with Action Bar) -->
    <style name="AppTheme.WithActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <!-- App Theme (Transparent) -->
    <style name="AppTheme.Transparent" parent="Theme.MaterialComponents.Bridge">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorMenuWhite</item>

        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!-- App Theme (Dialog) -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:colorAccent">@color/colorDialogAccent</item>
        <item name="colorControlActivated">@color/colorDialogAccent</item>
    </style>

    <!-- https://stackoverflow.com/a/26108697 -->
    <style name="AppTheme.Dialog.Large" parent="AppTheme.Dialog">
        <item name="android:colorAccent">@color/colorDialogAccent</item>
        <item name="colorControlActivated">@color/colorDialogAccent</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <!-- App Theme (Component) -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <!-- App Theme (TextAppearance) -->
    <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="AppTheme.TextAppearance.Hint">
        <item name="android:textColor">@color/colorDialogAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="AppTheme.TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="AppTheme.TextAppearance.ActionBar.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="AppTheme.TextAppearance.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- App Theme (Bus) -->
    <style name="AppTheme.Kmb" parent="AppTheme">
        <item name="colorPrimary">@color/colorKmb</item>
        <item name="colorPrimaryDark">@color/colorKmbDark</item>
        <item name="colorAccent">@color/colorKmbAccent</item>
    </style>

    <style name="AppTheme.Lwb" parent="AppTheme">
        <item name="colorPrimary">@color/colorLwb</item>
        <item name="colorPrimaryDark">@color/colorLwbDark</item>
        <item name="colorAccent">@color/colorLwbAccent</item>
    </style>

    <style name="AppTheme.Nwfb" parent="AppTheme">
        <item name="colorPrimary">@color/colorNwfb</item>
        <item name="colorPrimaryDark">@color/colorNwfbDark</item>
        <item name="colorAccent">@color/colorNwfbAccent</item>
    </style>

    <style name="AppTheme.Ctb" parent="AppTheme">
        <item name="colorPrimary">@color/colorCtb</item>
        <item name="colorPrimaryDark">@color/colorCtbDark</item>
        <item name="colorAccent">@color/colorCtbAccent</item>
    </style>

    <style name="AppTheme.Nlb" parent="AppTheme">
        <item name="colorPrimary">@color/colorNlb</item>
        <item name="colorPrimaryDark">@color/colorNlbDark</item>
        <item name="colorAccent">@color/colorNlbAccent</item>
    </style>

    <style name="AppTheme.Tram" parent="AppTheme">
        <item name="colorPrimary">@color/colorTram</item>
        <item name="colorPrimaryDark">@color/colorTramDark</item>
        <item name="colorAccent">@color/colorTramAccent</item>
    </style>

    <style name="AppTheme.Mtrb" parent="AppTheme">
        <item name="colorPrimary">@color/colorHki</item>
        <item name="colorPrimaryDark">@color/colorHkiDark</item>
        <item name="colorAccent">@color/colorHkiAccent</item>
    </style>

    <style name="AppTheme.Night" parent="AppTheme">
        <item name="colorPrimary">@color/colorNight</item>
        <item name="colorPrimaryDark">@color/colorNightDark</item>
        <item name="colorAccent">@color/colorNightAccent</item>
    </style>
</resources>
